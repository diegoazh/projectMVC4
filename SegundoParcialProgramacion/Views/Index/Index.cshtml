@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-md-3"></div>
<div class="col-md-6">
    <main>
        <h1 id="title_page">Dejanos tu comentario! <br /><small>Nos interesa saber que piensas.</small></h1>
        <form action="@Url.Action("Index")" method="post">
            <fieldset>
                <legend>Comentario:</legend>
                <div class="form-group">
                    <label for="nombre" class="sr-only">Nombre: </label>
                    <div class="input-group">
                        <div class="input-group-addon">Nombre</div>
                        <input type="text" name="nombre" class="form-control" value="" placeholder="Ingrese su nombre" />
                    </div>
                </div>
                <div class="form-group">
                    <label for="comentario" class="sr-only">Comentario: </label>
                    <div class="input-group">
                        <div class="input-group-addon">Comentario</div>
                        <textarea name="comentario" class="form-control" placeholder="Ingrese su comentario..."></textarea>
                    </div>
                </div>
                <div class="text-right">
                    <input type="reset" name="reset" value="Resetear campos" class="btn btn-warning btn-sm" />
                    <input type="submit" name="enviar" class="btn btn-success btn-lg" value="Enviar comentario" />
                </div>
            </fieldset>
        </form>
        <br />
        <hr />
        <br />
        <div id="comentarios_realizados">
            @foreach (var coment in ViewBag.comentarios)
            {
                <blockquote class="comentarios">
                    <h3 class="tt-comentarios">@coment.nombre <small>@coment.fecha</small></h3>
                    <h4 class="special-font body-comentaios">@coment.comentario1</h4>
                </blockquote>
            }
        </div>
    </main>
</div>
<div class="col-md-3"></div>

@section scripts {
    <script src="~/Scripts/miScript.js"></script>
}
